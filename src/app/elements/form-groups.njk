                      <option>Option 4</option>
                      <option>Option 5</option>
                  </select>
              </div>

              <div class="form-group select small">
                  <select class="form-control" id="select-3">
                      <option>Small</option>
                      <option>Option 1</option>
                      <option>Option 2</option>
                      <option>Option 3</option>
                      <option>Option 4</option>
                      <option>Option 5</option>
                  </select>
              </div>

              <div class="form-group select has-label small">
                  <label for="select-3">With label</label>
                  <select class="form-control" id="select-4">
                      <option>Small</option>
                      <option>Option 1</option>
                      <option>Option 2</option>
                      <option>Option 3</option>
                      <option>Option 4</option>
                      <option>Option 5</option>
                  </select>
              </div>

          </form>
        </script>
      </section>
    </div>
  </div>
</main>

{% endblock %}

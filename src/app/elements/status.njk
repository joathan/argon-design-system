          <br />

          <div class="status status-warning">
            <div class="status-color"></div>
            <span class="status-text">Status warning</span>
          </div>
        </div>
      </section>

      <section id="status-html" class="tab-pane fade tab-example-result-html" role="tabpanel" aria-labelledby="status-html-tab">
        <script type="text/plain" class="language-html">

{% extends "layout.njk" %} {% block content %}

<main class="p-4" role="main">
  <header>
    <div class="ct-page-title">
      <h1 class="ct-title" id="content">Status</h1>
    </div>
    <p class="ct-lead">Descrição do componente</p>
  </header>
  <hr />
  <h3 id="examples">Light background</h3>
  <div class="ct-example">
    <ul class="nav nav-tabs-code" id="status-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="status-component-tab" data-toggle="tab" href="#status-component" role="tab" aria-controls="status-component" aria-selected="true">Result</a>

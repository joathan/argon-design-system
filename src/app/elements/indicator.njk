{% extends "layout.njk" %} {% block content %}

<main class="p-4" role="main">
  <header>
    <div class="ct-page-title">
      <h1 class="ct-title" id="content">Indicator</h1>
    </div>
    <p class="ct-lead">Descrição do componente</p>
  </header>
  <hr />
  <div class="ct-example">
    <ul class="nav nav-tabs-code" id="tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="component-tab" data-toggle="tab" href="#component" role="tab" aria-controls="component" aria-selected="true">Result</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="html-tab" data-toggle="tab" href="#html" role="tab" aria-controls="html" aria-selected="false">HTML</a>
      </li>
    </ul>
    <div class="tab-content">
      <section id="component" class="tab-pane tab-example-result fade show active" role="tabpanel" aria-labelledby="component-tab">
        <div class="p-2">
          {% for item in element.card_stats.variations %}
          <div class="card card-stats card-stats-{{ item.type }}">
            {% if item.loading %}
            <div class="card-content {{ 'is-loading' if item.loading else '' }}">
              <h4 class="stats-title"></h4>
              <h2 class="stats-value"></h2>

              {% if item.period %}
              <p class="stats-datetime"></p>
              {% endif %}
            </div>
            <div class="card-icon">
              <i class="fas fa-spinner-third fa-spin"></i>
            </div>

            {% else %}

            <div class="card-content">
              <h4 class="stats-title">
                Stats {{ item.title }}

                {% if item.help %}
                <i class="fas fa-question-circle fa-fw" data-toggle="tooltip" data-placement="right" title="Tooltip on right"></i>
                {% endif %}
              </h4>
              <h2 class="stats-value">
                29.200 {% if item.maxLimit %}
                <small>/50.000</small>
                {% endif %}
              </h2>

              {% if item.period %}
              <p class="stats-datetime">Últimos 30 dias</p>
              {% endif %}
            </div>
            <div class="card-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            {% endif %}
          </div>
          {% endfor %}
        </div>
      </section>

      <section id="html" class="tab-pane fade tab-example-result-html" role="tabpanel" aria-labelledby="html-tab">
        <script type="text/plain" class="language-html">
          {% for item in element.card_stats.variations %}
          <div class="card card-stats card-stats-{{ item.type }}">
            {% if item.loading %}
            <div class="card-content {{ 'is-loading' if item.loading else '' }}">
              <h4 class="stats-title"></h4>
              <h2 class="stats-value"></h2>

              {% if item.period %}
              <p class="stats-datetime"></p>
              {% endif %}
            </div>
            <div class="card-icon">
              <i class="fas fa-spinner-third fa-spin"></i>
            </div>

            {% else %}

            <div class="card-content">
              <h4 class="stats-title">
                Stats {{ item.title }}

                {% if item.help %}
                <i class="fas fa-question-circle fa-fw" data-toggle="tooltip" data-placement="right" title="Tooltip on right"></i>
                {% endif %}
              </h4>
              <h2 class="stats-value">
                29.200 {% if item.maxLimit %}
                <small>/50.000</small>
                {% endif %}
              </h2>

              {% if item.period %}
              <p class="stats-datetime">Últimos 30 dias</p>
              {% endif %}
            </div>
            <div class="card-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            {% endif %}
          </div>
          {% endfor %}
        </script>
      </section>
    </div>
  </div>
</main>

{% endblock %}
